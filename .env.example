# ========================================
# Dogymorbis v0.21 - Environment Variables
# ========================================

# ========================================
# DATABASE
# ========================================
DATABASE_URL="postgresql://dogymorbis:password@localhost:5432/dogymorbis_dev"
DATABASE_URL_TEST="postgresql://dogymorbis:password@localhost:5432/dogymorbis_test"

# ========================================
# AUTHENTICATION
# ========================================
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-in-production"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# ========================================
# SERVER
# ========================================
NODE_ENV="development"
PORT=3001
HOST="0.0.0.0"
CORS_ORIGIN="http://localhost:3000"

# ========================================
# FRONTEND
# ========================================
NEXT_PUBLIC_API_URL="http://localhost:3001"
NEXT_PUBLIC_WS_URL="ws://localhost:3001"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# ========================================
# WEBSOCKET
# ========================================
WS_PORT=3002
WS_PATH="/ws"

# ========================================
# FILE UPLOAD
# ========================================
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE=10485760 # 10MB
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/webp,video/mp4"

# ========================================
# REDIS (для кэширования и сессий)
# ========================================
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""

# ========================================
# EMAIL (SMTP)
# ========================================
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
EMAIL_FROM="noreply@dogymorbis.com"

# ========================================
# PUSH NOTIFICATIONS
# ========================================
VAPID_PUBLIC_KEY="your-vapid-public-key"
VAPID_PRIVATE_KEY="your-vapid-private-key"

# ========================================
# AI ASSISTANT
# ========================================
AI_ENDPOINT="https://api.openai.com/v1"
AI_API_KEY="your-openai-api-key"
AI_MODEL="gpt-3.5-turbo"

# ========================================
# MAPS & LOCATION
# ========================================
GOOGLE_MAPS_API_KEY="your-google-maps-api-key"
MAPBOX_ACCESS_TOKEN="your-mapbox-access-token"

# ========================================
# PAYMENT PROCESSING
# ========================================
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"
STRIPE_PUBLISHABLE_KEY="pk_test_your-stripe-publishable-key"
STRIPE_WEBHOOK_SECRET="whsec_your-webhook-secret"

# ========================================
# ANALYTICS
# ========================================
GOOGLE_ANALYTICS_ID="G-XXXXXXXXXX"
MIXPANEL_TOKEN="your-mixpanel-token"

# ========================================
# SOCIAL LOGIN
# ========================================
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
FACEBOOK_APP_ID="your-facebook-app-id"
FACEBOOK_APP_SECRET="your-facebook-app-secret"

# ========================================
# RATE LIMITING
# ========================================
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# GAMIFICATION
# ========================================
DAILY_BONES_LIMIT=100
DAILY_YARN_LIMIT=50
REFERRAL_BONUS_BONES=50
REFERRAL_BONUS_YARN=25
LEVEL_MULTIPLIER=1.5

# ========================================
# DAO
# ========================================
DAO_MIN_STAKE=100
DAO_VOTING_PERIOD_DAYS=7
DAO_EXECUTION_DELAY_DAYS=3

# ========================================
# PARTNERS
# ========================================
PARTNER_COMMISSION_RATE=0.1 # 10%
MIN_PARTNER_BALANCE=1000

# ========================================
# SECURITY
# ========================================
BCRYPT_ROUNDS=12
SESSION_SECRET="your-session-secret"
COOKIE_SECRET="your-cookie-secret"

# ========================================
# LOGGING
# ========================================
LOG_LEVEL="info"
LOG_FORMAT="json"
SENTRY_DSN="your-sentry-dsn"

# ========================================
# DEVELOPMENT
# ========================================
DEBUG=true
ENABLE_SWAGGER=true
ENABLE_GRAPHIQL=true 